<Window
    x:Class="Clinic.WpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Clinic.WpfApp"
    mc:Ignorable="d"
    Title="Clinic Booking App"
    Height="780"
    Width="1250">

    <Border
        Background="#fcfcfc">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="170" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition
                    Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--Heading-->
            <Border
                BorderThickness="0,0,1,0"
                BorderBrush="#e8e8e8">
                <StackPanel
                    Orientation="Horizontal">

                    <Label
                        BorderThickness="0"
                        Background="#fcfcfc"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Margin="20,0,0,0">
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Image
                                Width="30"
                                Margin="0,0,12,0">
                                <Image.Source>
                                    <BitmapImage
                                        DecodePixelWidth="100"
                                        UriSource="/Image/icon-1.png" />
                                </Image.Source>
                            </Image>
                            <StackPanel>
                                <TextBlock
                                    Text="Clinic"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0" />
                                <TextBlock
                                    Text="Booking"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0" />
                            </StackPanel>
                        </StackPanel>
                    </Label>
                </StackPanel>
            </Border>

            <!--Side bar-->
            <Border
                Grid.Row="1"
                BorderThickness="0,0,1,0"
                BorderBrush="#e8e8e8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <!--Home Button-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,10,0,0"
                        Grid.Row="0">
                        <Button
                            Padding="10,15,60,15"
                            Foreground="Black"
                            Background="#fcfcfc"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            FontSize="14"
                            IsEnabled="True"
                            Cursor="Hand">
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Width="20">
                                    <Image.Source>
                                        <BitmapImage
                                            DecodePixelWidth="50"
                                            UriSource="/Image/home.png" />
                                    </Image.Source>
                                </Image>
                                <TextBlock
                                    Text="Home"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0" />
                            </StackPanel>
                            <Button.Resources>
                                <Style
                                    TargetType="{x:Type Border}">
                                    <Setter
                                        Property="CornerRadius"
                                        Value="6" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <!--Add Detail Button-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,10,0,0"
                        Grid.Row="1">
                        <Button
                            Padding="10,15,28,15"
                            Foreground="Black"
                            Background="#fcfcfc"
                            HorizontalAlignment="Left"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand">
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Width="20">
                                    <Image.Source>
                                        <BitmapImage
                                            DecodePixelWidth="50"
                                            UriSource="/Image/file-circle-info.png" />
                                    </Image.Source>
                                </Image>
                                <TextBlock
                                    Text="Add Detail"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0" />
                            </StackPanel>
                            <Button.Resources>
                                <Style
                                    TargetType="{x:Type Border}">
                                    <Setter
                                        Property="CornerRadius"
                                        Value="6" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <!--More Button-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,10,0,0"
                        Grid.Row="2">
                        <Button
                            Padding="10,15,65,15"
                            Foreground="Black"
                            Background="#fcfcfc"
                            HorizontalAlignment="Left"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand">
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Width="20">
                                    <Image.Source>
                                        <BitmapImage
                                            DecodePixelWidth="50"
                                            UriSource="/Image/menu-dots.png" />
                                    </Image.Source>
                                </Image>
                                <TextBlock
                                    Text="More"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0" />
                            </StackPanel>
                            <Button.Resources>
                                <Style
                                    TargetType="{x:Type Border}">
                                    <Setter
                                        Property="CornerRadius"
                                        Value="6" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <!--Settings Button-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,10,0,10"
                        Grid.Row="7">
                        <Button
                            Padding="10,15,45,15"
                            Foreground="Black"
                            Background="#fcfcfc"
                            HorizontalAlignment="Left"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand">
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Width="20">
                                    <Image.Source>
                                        <BitmapImage
                                            DecodePixelWidth="50"
                                            UriSource="/Image/settings.png" />
                                    </Image.Source>
                                </Image>
                                <TextBlock
                                    Text="Settings"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0" />
                            </StackPanel>
                            <Button.Resources>
                                <Style
                                    TargetType="{x:Type Border}">
                                    <Setter
                                        Property="CornerRadius"
                                        Value="6" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                </Grid>
            </Border>

            <!--Top Box-->
            <Grid
                Grid.Column="1">
            </Grid>

            <!--Greeting text-->
            <StackPanel
                Orientation="Horizontal"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="20,0,0,0">
                <Label
                    Content="Welcome back," 
                    FontSize="25"
                    FontWeight="Regular"/>
                <Label 
                    Content="Tom!"
                    FontSize="25"
                    FontWeight="Bold"/>
            </StackPanel>
            
            <!--Search Box-->
            <Grid
                HorizontalAlignment="Left"
                Grid.Column="1">
                
            </Grid>

            <!--Notification-->
            <Button
                Grid.Column="1"
                Panel.ZIndex="1"
                HorizontalAlignment="Right"
                Margin="0,0,120,0"
                BorderThickness="0"
                Height="22"
                Cursor="Hand">
                <Button.Resources>
                    <Style
                        TargetType="{x:Type Border}">
                        <Setter
                            Property="CornerRadius"
                            Value="10" />
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style
                        TargetType="{x:Type Button}">
                        <Setter
                            Property="Background"
                            Value="Transparent" />
                        <Setter
                            Property="Template">
                            <Setter.Value>
                                <ControlTemplate
                                    TargetType="{x:Type Button}">
                                    <Border
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger
                                Property="IsMouseOver"
                                Value="True">
                                <Setter
                                    Property="Background"
                                    Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Image
                    Width="18">
                    <Image.Source>
                        <BitmapImage
                            DecodePixelWidth="50"
                            UriSource="/Image/bell.png" />
                    </Image.Source>
                </Image>
            </Button>

            <!--Profile-->
            <StackPanel
                Orientation="Horizontal"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,30,0">
                <Grid>
                    <Image
                        Width="18"
                        Panel.ZIndex="1"
                        HorizontalAlignment="Left"
                        Margin="10,0,0,0">
                        <Image.Source>
                            <BitmapImage
                                DecodePixelWidth="50"
                                UriSource="/Image/search.png" />
                        </Image.Source>
                    </Image>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="40,0,0,0"
                        Text="Search..."
                        Panel.ZIndex="1"/>
                    <Border
                        BorderThickness="1"
                        BorderBrush="#D9D9D9"
                        Background="Transparent"
                        CornerRadius="10"
                        Padding="35,10,10,10"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1">
                        <TextBox
                            x:Name="Search"
                            Width="250"
                            Height="20"
                            FontSize="14"
                            BorderThickness="0"
                            Background="Transparent" />

                    </Border>
                </Grid>
                <Button
                    BorderThickness="0"
                    Background="Transparent"
                    Padding="0,0,10,0"
                    Margin="50,0,0,0"
                    Height="35"
                    Grid.Column="1"
                    Cursor="Hand">
                    <Button.Resources>
                        <Style
                            TargetType="{x:Type Border}">
                            <Setter
                                Property="CornerRadius"
                                Value="20" />
                        </Style>
                    </Button.Resources>
                    <StackPanel
                        Orientation="Horizontal">
                        <Image
                            Width="35"
                            HorizontalAlignment="Right">
                            <Image.Source>
                                <BitmapImage
                                    DecodePixelWidth="90"
                                    UriSource="/Image/account.png" />
                            </Image.Source>
                        </Image>
                        <Image
                            Width="12"
                            VerticalAlignment="Center"
                            Margin="8,0,0,0">
                            <Image.Source>
                                <BitmapImage
                                    DecodePixelWidth="90"
                                    UriSource="/Image/down-arrow.png" />
                            </Image.Source>
                        </Image>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!--Home Dashboard-->
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="25">

                <StackPanel.Resources>
                    <Style
                        TargetType="{x:Type Border}">
                        <Setter
                            Property="Margin"
                            Value="0,0,0,0" />
                    </Style>
                </StackPanel.Resources>

                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
                    
                    <!--Upgrade plan Box-->
                    <Border
                        Width="570"
                        Height="250">

                        <Border.Background>
                            <LinearGradientBrush
                                StartPoint="0,0"
                                EndPoint="1,2">
                                <GradientStop
                                    Color="#1a2122"
                                    Offset="0.0" />
                                <GradientStop
                                    Color="#1a2122"
                                    Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>

                        <Border.Clip>
                            <RectangleGeometry
                                RadiusX="10"
                                RadiusY="10"
                                Rect="0,0,570,250" />
                        </Border.Clip>

                        <Grid>
                            <StackPanel>
                                <TextBlock
                                    Text="Upgrade Your Plan to Premium&#x0a;and Get unlimited access"
                                    Foreground="White"
                                    FontSize="28"
                                    FontWeight="SemiBold"
                                    Margin="30,20,10,0" />

                                <!--Upgrade-->
                                <Button
                                    Margin="30,90,10,0"
                                    Width="120"
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand">

                                    <Button.Resources>
                                        <Style
                                            TargetType="{x:Type Border}">
                                            <Setter
                                                Property="CornerRadius"
                                                Value="7" />
                                        </Style>
                                    </Button.Resources>

                                    <Button.Style>
                                        <Style
                                            TargetType="{x:Type Button}">
                                            <Setter
                                                Property="Background"
                                                Value="#FFFFFF" />
                                            <Setter
                                                Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate
                                                        TargetType="{x:Type Button}">
                                                        <Border
                                                            Background="{TemplateBinding Background}">
                                                            <ContentPresenter
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger
                                                    Property="IsMouseOver"
                                                    Value="True">
                                                    <Setter
                                                        Property="Background"
                                                        Value="#F1F1F1" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                    <TextBlock
                                        Text="Upgrade now"
                                        Foreground="Black"
                                        FontSize="14"
                                        FontWeight="SemiBold"/>
                                </Button>

                            </StackPanel>

                            <Image
                                Width="100"
                                Height="100"
                                Margin="400,-60,0,0">
                                <Image.Source>
                                    <BitmapImage
                                        DecodePixelWidth="100"
                                        UriSource="/Image/dental-floss.png"/>
                                </Image.Source>
                                <Image.RenderTransform>
                                    <RotateTransform
                                        Angle="20" />
                                </Image.RenderTransform>
                            </Image>

                            <Image
                                Width="40"
                                Height="40"
                                Margin="450,150,0,0">
                                <Image.Source>
                                    <BitmapImage
                                        DecodePixelWidth="50"
                                        UriSource="/Image/sparkle.png" />
                                </Image.Source>
                            </Image>

                            <Image
                                Width="80"
                                Height="80"
                                Margin="100,180,0,0">
                                <Image.Source>
                                    <BitmapImage
                                        DecodePixelWidth="100"
                                        UriSource="/Image/tooth.png" />
                                </Image.Source>
                                <Image.RenderTransform>
                                    <RotateTransform
                                        Angle="15" />
                                </Image.RenderTransform>
                            </Image>

                            <Image
                                Width="40"
                                Height="40"
                                Margin="140,40,0,0">
                                <Image.Source>
                                    <BitmapImage
                                        DecodePixelWidth="50"
                                        UriSource="/Image/sparkle.png" />
                                </Image.Source>
                            </Image>

                            <Image
                                Width="40"
                                Height="40"
                                Margin="450,-200,0,0">
                                <Image.Source>
                                    <BitmapImage
                                        DecodePixelWidth="50"
                                        UriSource="/Image/sparkle.png" />
                                </Image.Source>
                            </Image>

                        </Grid>

                    </Border>

                    <!--Book a dentist box-->
                    <Border
                        Width="415"
                        Height="250"
                        CornerRadius="10"
                        Margin="15,0,0,0">

                        <Border.Background>
                            <LinearGradientBrush
                                StartPoint="0,0"
                                EndPoint="1,2">
                                <GradientStop
                                    Color="#A5ABF6"
                                    Offset="0.0" />
                                <GradientStop
                                    Color="#4C58F6"
                                    Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>

                        
                        <StackPanel>
                            <TextBlock
                                Text="Book the best dentist&#x0a;for you today!"
                                Foreground="#1a2122"
                                FontSize="28"
                                FontWeight="SemiBold"
                                Margin="30,20,10,0" />
                            
                            <Image
                                Width="250"
                                Height="250"
                                Source="/Image/dental-checkup.png"
                                Margin="190,15,-50,-102" />

                            <!--Book now Button-->
                            <Button
                                Margin="30,-100,10,0"
                                Width="120"
                                Height="40"
                                HorizontalAlignment="Left"
                                Cursor="Hand">

                                <Button.Resources>
                                    <Style
                                        TargetType="{x:Type Border}">
                                        <Setter
                                            Property="CornerRadius"
                                            Value="7" />
                                    </Style>
                                </Button.Resources>

                                <Button.Style>
                                    <Style
                                        TargetType="{x:Type Button}">
                                        <Setter
                                            Property="Background"
                                            Value="#1a2122" />
                                        <Setter
                                            Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate
                                                    TargetType="{x:Type Button}">
                                                    <Border
                                                        Background="{TemplateBinding Background}">
                                                        <ContentPresenter
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger
                                                Property="IsMouseOver"
                                                Value="True">
                                                <Setter
                                                    Property="Background"
                                                    Value="#242D2F" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <TextBlock
                                    Text="Book now"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold" />
                            </Button>
                        </StackPanel>

                        <Border.Clip>
                            <RectangleGeometry
                                RadiusX="10"
                                RadiusY="10"
                                Rect="0,0,425,250" />
                        </Border.Clip>
                    </Border>

                </StackPanel>

                <StackPanel>
                    
                    <!--Most used service-->
                    <TextBlock
                        Text="Most Used Services"
                        Foreground="Black"
                        FontSize="20"
                        FontWeight="DemiBold"
                        HorizontalAlignment="Left"
                        Margin="0, 0, 0, 10">

                    </TextBlock>

                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">

                        <!--Clinic-->
                        <Button
                            Width="150"
                            Height="250"
                            Margin="0,0,15,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Open_wClinic_Click">

                            <Button.Resources>
                                <Style
                                    TargetType="{x:Type Border}">
                                    <Setter
                                        Property="CornerRadius"
                                        Value="10" />
                                </Style>
                            </Button.Resources>

                            <Button.Style>
                                <Style
                                    TargetType="{x:Type Button}">
                                    <Setter
                                        Property="Background"
                                        Value="#c5f46c" />
                                    <Setter
                                        Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate
                                                TargetType="{x:Type Button}">
                                                <Border
                                                    Background="{TemplateBinding Background}">
                                                    <ContentPresenter
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger
                                            Property="IsMouseOver"
                                            Value="True">
                                            <Setter
                                                Property="Background"
                                                Value="#BCE968" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <StackPanel
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                                <Image
                                    Width="25"
                                    Margin="0,0,0,10">
                                    <Image.Source>
                                        <BitmapImage
                                            DecodePixelWidth="55"
                                            UriSource="/Image/hospitals.png" />
                                    </Image.Source>
                                </Image>
                                <TextBlock
                                    Text="Clinic"
                                    FontWeight="SemiBold"
                                    FontSize="18" />
                            </StackPanel>
                        </Button>

                        <StackPanel 
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <!--Service-->
                            <Button
                                Width="250"
                                Height="120"
                                Margin="0,0,15,10"
                                BorderThickness="0"
                                VerticalAlignment="Top"
                                Cursor="Hand"
                                Click="Open_wServices_Click">

                                <Button.Resources>
                                    <Style
                                        TargetType="{x:Type Border}">
                                        <Setter
                                            Property="CornerRadius"
                                            Value="10" />
                                    </Style>
                                </Button.Resources>

                                <Button.Style>
                                    <Style
                                        TargetType="{x:Type Button}">
                                        <Setter
                                            Property="Background"
                                            Value="#a5abf6" />
                                        <Setter
                                            Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate
                                                    TargetType="{x:Type Button}">
                                                    <Border
                                                        Background="{TemplateBinding Background}">
                                                        <ContentPresenter
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger
                                                Property="IsMouseOver"
                                                Value="True">
                                                <Setter
                                                    Property="Background"
                                                    Value="#9DA3F5" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <StackPanel
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                    <Image
                                        Width="25"
                                        Margin="0,0,0,10">
                                        <Image.Source>
                                            <BitmapImage
                                                DecodePixelWidth="55"
                                                UriSource="/Image/room-service.png" />
                                        </Image.Source>
                                    </Image>
                                    <TextBlock
                                        Text="Service"
                                        FontWeight="SemiBold"
                                        FontSize="18" />
                                </StackPanel>
                            </Button>

                            <!--Record-->
                            <Button
                                Width="250"
                                Height="120"
                                Margin="0,0,15,0"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="Open_WRecord_Click">

                                <Button.Resources>
                                    <Style
                                        TargetType="{x:Type Border}">
                                        <Setter
                                            Property="CornerRadius"
                                            Value="10" />
                                    </Style>
                                </Button.Resources>

                                <Button.Style>
                                    <Style
                                        TargetType="{x:Type Button}">
                                        <Setter
                                            Property="Background"
                                            Value="#1a2122" />
                                        <Setter
                                            Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate
                                                    TargetType="{x:Type Button}">
                                                    <Border
                                                        Background="{TemplateBinding Background}">
                                                        <ContentPresenter
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger
                                                Property="IsMouseOver"
                                                Value="True">
                                                <Setter
                                                    Property="Background"
                                                    Value="#242D2F" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <StackPanel
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                    <Image
                                        Width="25"
                                        Margin="0,0,0,10">
                                        <Image.Source>
                                            <BitmapImage
                                                DecodePixelWidth="55"
                                                UriSource="/Image/address-book.png" />
                                        </Image.Source>
                                    </Image>
                                    <TextBlock
                                        Text="Record"
                                        FontWeight="SemiBold"
                                        FontSize="18"
                                        Foreground="White" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel
                            Orientation="Vertical"
                            VerticalAlignment="Center">
                            <!--Customer-->
                            <Button
                                Width="150"
                                Height="120"
                                Margin="0,0,15,10"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="Open_WRecord_Click">

                                <Button.Resources>
                                    <Style
                                        TargetType="{x:Type Border}">
                                        <Setter
                                            Property="CornerRadius"
                                            Value="10" />
                                    </Style>
                                </Button.Resources>

                                <Button.Style>
                                    <Style
                                        TargetType="{x:Type Button}">
                                        <Setter
                                            Property="Background"
                                            Value="#c5f46c" />
                                        <Setter
                                            Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate
                                                    TargetType="{x:Type Button}">
                                                    <Border
                                                        Background="{TemplateBinding Background}">
                                                        <ContentPresenter
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
